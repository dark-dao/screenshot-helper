{
    "manifest_version": 3,
    "name": "Screenshot Helper",
    "version": "0.0.1",
    "permissions": ["activeTab", "tabs", "scripting"],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_icon": "icons/icon.png"
    }
}